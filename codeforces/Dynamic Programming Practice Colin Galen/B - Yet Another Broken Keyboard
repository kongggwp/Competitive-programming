#include<bits/stdc++.h>
using namespace std;
bool typeable[26];
#define int long long int
int32_t main()
{
    int dp[200005] , a[200005];
    ios_base::sync_with_stdio;cin.tie();
    int n,k;
    cin >> n >> k;
    dp[0]=0;
    string s;
    cin >> s;
    for(int i=0 ; i<k ;i++)
    {
        char c;
        cin >> c;
        typeable[c-'a'] = 1;
    }
    for(int i=0 ; i<n ; i++)
    {
        if(typeable[s[i]-'a'])a[i]=1;
        else a[i]=0;
    }
    int sum=0;
    for(int i=1 ; i<=n ; i++)
    {
        if(a[i-1])dp[i]=dp[i-1]+1;
        else dp[i]=0;
        sum+=dp[i];
    }
    cout << sum;
}
